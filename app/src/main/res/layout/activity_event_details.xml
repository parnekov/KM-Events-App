<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/shape_for_ent_main"
        android:layout_height="match_parent">


    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="50dp"
            android:clickable="true"
            app:srcCompat="@drawable/ic_call"
            android:id="@+id/button_fab_call"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintStart_toEndOf="@+id/text_view_price"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/text_view_price"/>
    <TextView
            android:text="100 UAH"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/text_view_price"
            app:layout_constraintStart_toEndOf="@+id/image_view_ticket"
            android:layout_marginStart="20dp" android:layout_marginLeft="20dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image_view_description"/>
    <TextView
            android:text="Найкраща танцювальна музика від наших резидентів!"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_short_description" android:textColor="@android:color/white"
            android:textSize="12sp" android:textStyle="bold"
            android:gravity="center|start"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_club_name"
            app:layout_constraintStart_toEndOf="@+id/image_view_description" android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"/>
    <TextView
            android:text='Club "Sugar"'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_club_name" android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/image_view_location"
            android:layout_marginStart="20dp" android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title"/>
    <TextView
            android:text="Party Birthday Open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_title"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/image_view_location" android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_day"/>
    <View
            android:id="@+id/divider15"
            android:layout_width="2dp"
            android:layout_height="56dp"
            android:background="@color/color_block_ent_cinema"
            app:layout_constraintTop_toBottomOf="@+id/imageView11"
            app:layout_constraintBottom_toTopOf="@+id/imageView13" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"/>
    <View
            android:id="@+id/divider16"
            android:layout_width="2dp"
            android:layout_height="34dp"
            android:background="@color/color_block_ent_cinema"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView13"
            app:layout_constraintBottom_toTopOf="@+id/imageView14"/>
    <View
            android:id="@+id/divider17"
            android:layout_width="2dp"
            android:layout_height="32dp"
            android:background="@color/color_block_ent_cinema"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView12"
            app:layout_constraintTop_toBottomOf="@+id/imageView14"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_price"
            android:id="@+id/image_view_ticket"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image_view_description"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_description"
            android:id="@+id/image_view_description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image_view_location"/>
    <TextView
            android:text="SEP 2018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_month"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/divider14"
            app:layout_constraintStart_toStartOf="@+id/divider14"
            app:layout_constraintEnd_toEndOf="@+id/divider14" android:gravity="center"/>
    <TextView
            android:text="08:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_time"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="104dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="104dp"
            app:layout_constraintHorizontal_bias="0.021"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/image_view_details"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_location"
            android:id="@+id/image_view_location"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/text_view_day"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_circle"
            android:id="@+id/imageView11"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="300dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_circle"
            android:id="@+id/imageView12"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView14"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_circle"
            android:id="@+id/imageView13"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/imageView11"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_circle"
            android:id="@+id/imageView14"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="34dp" app:layout_constraintTop_toBottomOf="@+id/imageView13"/>
    <TextView
            android:text="14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_day" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/image_view_details" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@android:color/white" android:textSize="70sp"
            android:textStyle="bold"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/image_event_test"
            android:id="@+id/image_view_details"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <View
            android:id="@+id/divider14"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="@+id/text_view_time"
            app:layout_constraintEnd_toEndOf="@+id/text_view_time"
            app:layout_constraintTop_toBottomOf="@+id/text_view_time" android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>